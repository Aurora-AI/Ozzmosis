# ===============================
# Chronos Backoffice — Environment
# ===============================

# Provider de LLM
# Valores possíveis:
# - ollama   (default, soberano, local)
# - deepseek (DEMO ONLY, cloud)
CHRONOS_LLM_PROVIDER=ollama

# ===============================
# Ollama (local, default)
# ===============================
# Use OpenAI compatibility se preferir:
#   http://127.0.0.1:11434/v1
OLLAMA_BASE_URL=http://127.0.0.1:11434/v1
CHRONOS_LLM_MODEL=llama3.1

# Placeholder (opcional) para OpenAI compatibility local.
OLLAMA_API_KEY=ollama

# ===============================
# DeepSeek (DEMO ONLY — NÃO COMMITAR CHAVE REAL)
# ===============================
DEEPSEEK_API_KEY=sk-xxxxxxxx
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# ===============================
# UI / Progressive Disclosure
# ===============================
# Banner de aviso no modo DEMO
NEXT_PUBLIC_CHRONOS_PROVIDER=ollama

# ===============================
# Butantan Shield (PROD)
# ===============================
# Base URL do Shield (ex.: https://shield.butantan.gov.br)
SHIELD_URL=
# Token Bearer para proxy /proxy/*
SHIELD_TOKEN=
