{
  "name": "@aurora/ozzmosis-monorepo",
  "version": "0.1.0",
  "description": "Aurora/Elysian 2.0 canonical Node monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*"
  ],
  "scripts": {
    "build:conductor": "npm -w libs/aurora-conductor run build",
    "typecheck:conductor": "npm -w libs/aurora-conductor run typecheck",
    "lint:conductor": "npm -w libs/aurora-conductor run lint",
    "smoke:conductor": "node ./scripts/smoke/conductor-smoke.mjs",
    "test:conductor": "npm -w libs/aurora-conductor run test",
    "survival:conductor": "npm -w libs/aurora-conductor run test:survival",
    "repo:check": "npm run -w @aurora/tooling repo:check",
    "repo:clean": "npm run -w @aurora/tooling repo:clean",
    "chronos:build": "npm run -w @aurora/chronos build",
    "chronos:smoke": "npm run -w @aurora/chronos smoke",
    "install:clean": "node ./scripts/npm/clean-install.mjs"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
